<Window x:Class="HawaiBiosReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hawaii Bios Reader" Height="700" Width="600" ResizeMode="CanMinimize">
    <Grid x:Name="LayoutRoot" Background="White">
        <Button x:Name="bOpenFileDialog" Content="Open File" Width="60" Margin="10,10,0,0"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Click="bOpenFileDialog_Click" />
        
        <TabControl Margin="10,40,10,10">
            
            <TabItem Header="Overview">
                <Grid>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="File name:" Margin="10,10,0,0" 
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="filename" Text="" Margin="10,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="169" IsReadOnly="True" />

                    <TextBlock Text="PowerTable Location:" Margin="10,55,0,0" 
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="tbResults" Text="" Margin="10,75,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="169" IsReadOnly="True" />

                    <TextBlock Text="PowerTable Size/Type:" Margin="10,100,0,0" 
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="powerTablesize" Text="" Margin="10,120,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="169" IsReadOnly="True" />

                    <TextBlock Text="PowerTable Content:" Margin="10,10,0,0" 
                               VerticalAlignment="Top" HorizontalAlignment="Left"
                               Grid.Column="1" />
                    <TextBox x:Name="powerTable" Text="" Margin="10,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Height="256" Width="357" Grid.Column="1" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                
                </Grid>
            </TabItem>
            
            <TabItem Header="PowerPlay">
                <Grid>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="GPU Clock 1:" Margin="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="gpuclock1" Text="" Margin="100,10,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="173" 
                             IsReadOnly="True"/>
                    <TextBlock Text="GPU Clock 2:" Margin="10,30,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="gpuclock2" Text="" Margin="100,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="173"
                             IsReadOnly="True"/>
                    <TextBlock Text="GPU Clock 3:" Margin="10,50,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="gpuclock3" Text="" Margin="100,50,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="173"
                             IsReadOnly="True"/>

                    <TextBlock Text="MEM Clock 1:" Margin="10,80,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="memclock1" Text="" Margin="100,80,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="173"
                             IsReadOnly="True"/>
                    <TextBlock Text="MEM Clock 2:" Margin="10,100,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="memclock2" Text="" Margin="100,100,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="173"
                             IsReadOnly="True"/>
                    <TextBlock Text="MEM Clock 3:" Margin="10,120,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="memclock3" Text="" Margin="100,120,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="173"
                             IsReadOnly="True"/>

                    <TextBlock Text="Voltage Table: (VDDCI?)" Margin="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left"
                               Grid.Column="1" />
                    <TextBox x:Name="voltagetable" Text="" Margin="10,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Height="255" Width="263" Grid.Column="1"
                             IsReadOnly="True"/>

                    <TextBlock Text="GPU Freq Table:" Margin="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left"
                               Grid.Row="1" />
                    <TextBox x:Name="gpufrequencytable" Text="" Margin="10,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Height="255" Width="263" Grid.Row="1"
                             IsReadOnly="True"/>

                    <TextBlock Text="MEM Freq Table:" Margin="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left"
                               Grid.Row="1" Grid.Column="1" />
                    <TextBox x:Name="memfrequencytable" Text="" Margin="10,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                              Height="255" Width="263" Grid.Row="1" Grid.Column="1"
                             IsReadOnly="True"/>

                    <TextBlock Text="Values in voltage/mem/gpu before -- are locations in ROM if you want to edit them by hand." Margin="10,143,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" Width="263" TextWrapping="Wrap" FontWeight="SemiBold"/>

                </Grid>
            </TabItem>
            
            <TabItem Header="Fan profile">
                <Grid>
                    
                    <TextBlock Text="Fan speeds:" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="fanspeed1" Text="" Margin="100,10,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="95"
                             IsReadOnly="True"/>
                    <TextBox x:Name="fanspeed2" Text="" Margin="200,10,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="95"
                             IsReadOnly="True"/>
                    <TextBox x:Name="fanspeed3" Text="" Margin="300,10,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="95"
                             IsReadOnly="True"/>

                    <TextBlock Text="Temp. target:" Margin="10,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="fantemperature1" Text="" Margin="100,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="95"
                             IsReadOnly="True"/>
                    <TextBox x:Name="fantemperature2" Text="" Margin="200,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="95"
                             IsReadOnly="True"/>
                    <TextBox x:Name="fantemperature3" Text="" Margin="300,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top" Width="95"
                             IsReadOnly="True"/>

                </Grid>
            </TabItem>
            
            <TabItem Header="Other...">
                <Grid>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="StartVCELimitTable:" Margin="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBox x:Name="somevalues" Text="" Margin="10,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Height="256" Width="263" IsReadOnly="True" />
                    
                    <TextBlock Text="StartSAMULimitTable:" Margin="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1" />
                    <TextBox x:Name="somevalues2" Text="" Margin="10,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Height="256" Width="263" IsReadOnly="True" Grid.Row="1" />
                    
                    <TextBlock Text="StartACPLimitTable:" Margin="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" />
                    <TextBox x:Name="somevalues3" Text="" Margin="10,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Height="256" Width="263" IsReadOnly="True" Grid.Column="1" />
                    
                    <TextBlock Text="StartUVDLimitTable:" Margin="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" />
                    <TextBox x:Name="somevalues4" Text="" Margin="10,30,0,0"
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Height="256" Width="263" IsReadOnly="True" Grid.Column="1" Grid.Row="1" />
                    
                </Grid>
            </TabItem>
            
        </TabControl>
        
    </Grid>
</Window>
